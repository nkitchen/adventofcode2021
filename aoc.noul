adjs4 := \i, j -> [
    V(i - 1, j),
    V(i + 1, j),
    V(i, j - 1),
    V(i, j + 1)
];

adjs4_bounded := \m, n -> (
    \i, j -> (
        adjs4(i, j) filter (\[i', j'] -> 0 <= i' < m and 0 <= j' < n)
    )
);

nbr9 := \i, j -> list(
    for (di <- (-1) to 1; dj <- (-1) to 1) yield V(i + di, j + dj)
);

dprint := \...args -> (
    if (DEBUG) (
        print of args
    )
);

